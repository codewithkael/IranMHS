<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="شبکه">

        <EditTextPreference
            app:key="ServerIP"
            app:title="آدرس شبکه را وارد کنید"
            app:useSimpleSummaryProvider="true" />



    </PreferenceCategory>

    <PreferenceCategory app:title="کاربر">

        <EditTextPreference
            app:key="username"
            app:title="نام کاربری"
            app:summary="نام کاربری خود را وارد کنید"
            />

        <EditTextPreference
            app:key="password"
            app:title="رمز عبور"
            app:summary="رمز عبور خود را وارد کنید" />


        <SwitchPreferenceCompat
            app:key="example_switch"
            app:summary="با فعال کردن این گزینه هنگام باز کردن نرم افزار به صورت خودکار لاگین انجام میشود"
            app:title="ورود خودکار" />



    </PreferenceCategory>

</PreferenceScreen>
